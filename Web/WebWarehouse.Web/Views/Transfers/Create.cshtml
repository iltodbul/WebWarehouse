@section Scripts
{
    <script>
        //TransferGoods[0].Name
        function AddMoreGoods() {
            var goodsIndex = 0;
            $("#GoodsContainer").append("<div class='form-control'> Name <input type='text' name='TransferGoods["+goodsIndex+"].Name' /> Quantity <input type='double' name='TransferGoods["+goodsIndex+"].Quantity' /></div>");
            goodsIndex++;
        }
    </script>
