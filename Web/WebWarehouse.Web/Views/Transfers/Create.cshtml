@using System.Linq
@model WebWarehouse.Web.ViewModels.Transfers.TransferInputModel
@{
    ViewData["Title"] = "Create a New Transfer";
    var warehouses = this.ViewData["Warehouses"] as SelectList;
    var goodsList = this.ViewData["Goods"] as SelectList;
}

<h1>@this.ViewData["Title"]</h1>
<h3>Some text here how or why to create new transfer, maybe?</h3>

<div class="col-lg-6">
    <form method="post" enctype="multipart/form-data" class="pt-4">

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Out WarehouseId</label>
            <div class="col-sm-10">
                <select asp-for="@Model.OutWarehouseId" class="form-control" asp-items="@warehouses">
                </select>
                <span asp-validation-for="OutWarehouseId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">In WarehouseId</label>
            <div class="col-sm-10">
                <select asp-for="@Model.InWarehouseId" class="form-control" asp-items="@warehouses">
                </select>
                <span asp-validation-for="InWarehouseId" class="text-danger"></span>
            </div>
        </div>

        <label class="col-sm-2 col-form-label">Goods:</label>
        <div class="form-group row">
            
            <div class="form-group row">
                <div class="col-sm-6 text-right">
                    <select asp-for="@Model.TransferGoods" class="form-control" asp-items="@goodsList">
                    </select>
                </div>

                <div class="col-sm-6">
                    <input type="number" name="TransferGoods[0].Quantity" class="form-control" required="required">
                </div>

            </div>

        </div>

        <div class="form-group row">
            <div class="form-group row">
                <div class="col-sm-6 text-right">
                    <select asp-for="@Model.TransferGoods" class="form-control" asp-items="@goodsList">
                    </select>
                </div>
                <div class="col-sm-6">
                    <input type="number" name="TransferGoods[1].Quantity" class="form-control" required="required">
                </div>

            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success" asp-controller="Transfers" asp-action="Create">
                    Create transfer
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-controller="Transfers" asp-action="All">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <script>
        //TransferGoods[0].Name
        function AddMoreGoods() {
            var goodsIndex = 0;
            $("#GoodsContainer").append("<div class='form-control'> Name <input type='text' name='TransferGoods[" + goodsIndex + "].Name' /> Quantity <input type='number' name='TransferGoods[" + goodsIndex + "].Quantity' /></div>");
            goodsIndex++;
        }
    </script>
}