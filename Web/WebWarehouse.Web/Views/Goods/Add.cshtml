@model WebWarehouse.Web.ViewModels.Goods.GoodInputModel
@{
    ViewData["Title"] = "Create a New Goods";
    var measures = this.ViewData["Measures"] as SelectList;
}

<h1>@this.ViewData["Title"]</h1>
<h3>Some text here how or why to create new goods, maybe?</h3>

<div class="col-lg-6">
    <form method="post" enctype="multipart/form-data" class="pt-4">

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">SKU</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.SKU" class="form-control" required="required">
                <span asp-validation-for="SKU" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Barcode</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Barcode" class="form-control">
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Measure</label>
            <div class="col-sm-10">
                <select asp-for="@Model.MeasureId" class="form-control" asp-items="@measures">
                </select>
                <span asp-validation-for="MeasureId" class="text-danger"></span>

                <span>
                    <a class="btn btn-info" data-toggle="tooltip" data-placement="left" title="Tooltip on top" asp-controller="Measures" asp-action="Create">Add New Measure</a>
                </span>
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Delivery Price</label>
            <div class="col-sm-10">
                <input type="number" asp-for="@Model.DeliveryPrice" class="form-control" required="required">
                <span asp-validation-for="DeliveryPrice" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Sale Price</label>
            <div class="col-sm-10">
                <input type="number" asp-for="@Model.SalePrice" class="form-control" required="required">
                <span asp-validation-for="SalePrice" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Quantity</label>
            <div class="col-sm-10">
                <input type="number" asp-for="@Model.Quantity" class="form-control" required="required">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success" asp-controller="Goods" asp-action="Add">
                    Add Goods
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-controller="Goods" asp-action="All">Cancel</a>
            </div>
        </div>
    </form>
</div>